@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "E-posta Gönderildi";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-0 p-5 text-center" style="border-radius: 25px;">
                <div class="mb-4">
                    <i class="bi bi-send-check" style="font-size: 5rem; color: var(--ibb-pink);"></i>
                </div>
                <h2 class="fw-bold mb-3">E-posta Gönderildi!</h2>
                <p class="text-muted mb-4 lead">Lütfen gelen kutunuzu kontrol edin. Şifre sıfırlama talimatlarını içeren bir e-posta gönderdik.</p>
                <a asp-page="./Login" class="btn btn-lg text-white px-5" style="background-color: var(--ibb-dark-bg); border-radius: 12px;">
                    Giriş Ekranına Dön
                </a> 
            </div>
        </div>
    </div>
</div>
