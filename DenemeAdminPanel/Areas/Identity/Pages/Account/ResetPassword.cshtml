@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Yeni Şifre Belirle";

    // İşlem başarılı mı kontrolü:
    // Metod POST ise ve hata yoksa şifre değişmiş demektir.
    var isSuccess = HttpContext.Request.Method == "POST" && ViewData.ModelState.IsValid;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 p-4" style="border-radius: 20px;">

                @if (isSuccess)
                {
                    @* Şifre başarıyla değiştikten sonra görünecek tek ekran *@
                    <div class="text-center py-4">
                        <div class="mb-4">
                            <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: #28a745;"></i>
                        </div>
                        <h2 class="fw-bold mb-3">İşlem Tamamlandı</h2>
                        <p class="text-muted mb-4 lead">
                            Şifreniz başarıyla güncellendi. Artık <strong>bu sayfayı kapatabilir</strong> ve ana giriş ekranına dönerek giriş yapabilirsiniz.
                        </p>
                        <button onclick="window.close()" class="btn btn-dark btn-lg w-100" style="border-radius: 12px;">
                            Pencereyi Kapat
                        </button>
                    </div>
                }
                else
                {
                    @* Form kısmı *@
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-key-fill" style="font-size: 3.5rem; color: var(--ibb-pink);"></i>
                        </div>
                        <h2 class="fw-bold" style="color: var(--ibb-dark-bg);">Yeni Şifre Belirle</h2>
                        <p class="text-muted px-3">Lütfen yeni şifrenizi belirleyin ve onaylayın.</p>
                    </div>

                    <form method="post" id="resetPasswordForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input asp-for="Input.Code" type="hidden" />
                        <input asp-for="Input.Email" type="hidden" />

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control shadow-sm" style="border-radius: 12px; border: 1px solid #dee2e6;" placeholder="Yeni Şifre" />
                            <label asp-for="Input.Password">Yeni Şifre</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Input.ConfirmPassword" class="form-control shadow-sm" style="border-radius: 12px; border: 1px solid #dee2e6;" placeholder="Yeni Şifre Tekrar" />
                            <label asp-for="Input.ConfirmPassword">Yeni Şifre Tekrar</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg text-white py-3 shadow" style="background-color: var(--ibb-pink); border-radius: 15px; font-weight: 600; border: none;">
                            Şifreyi Güncelle
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

