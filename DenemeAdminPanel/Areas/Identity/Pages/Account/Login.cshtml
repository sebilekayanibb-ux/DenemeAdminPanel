@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            @* Başarı Mesajı Alanı - Şifre değişince burada görünecek *@
            <div id="success-alert" class="alert alert-success border-0 shadow-sm mb-4 d-none" style="border-radius: 12px;">
                <i class="bi bi-check-circle-fill me-2"></i> Şifreniz başarıyla güncellendi. Yeni şifrenizle giriş yapabilirsiniz.
            </div>

            <section class="card shadow-sm p-4" style="border-radius: 15px;">
                <form id="account" method="post">
                    <h2 class="text-center mb-4">Giriş Yap</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" id="login-email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">E-posta</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="checkbox mb-3 d-flex justify-content-between">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Beni Hatırla
                        </label>
                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: var(--ibb-pink); text-decoration: none; font-weight: 500;">Şifremi Unuttum</a>
                    </div>

                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg text-white" style="background-color: var(--ibb-pink); border-radius: 10px;">Giriş Yap</button>
                    </div>

                    <div class="mt-4 text-center">
                        <p>
                            Hesabınız yok mu? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: var(--ibb-pink); text-decoration: none; font-weight: bold;">Yeni Personel Kaydı</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Sayfa açıkken diğer sekmeden gelen "Şifre Değişti" sinyalini dinler
        window.addEventListener('storage', function (event) {
            if (event.key === 'password_reset_status' && event.newValue === 'success') {

                // 1. Başarı mesajını göster
                const alertDiv = document.getElementById('success-alert');
                alertDiv.classList.remove('d-none');

                // 2. LocalStorage'ı temizle (Sürekli tetiklenmesin diye)
                localStorage.removeItem('password_reset_status');

                // 3. Kullanıcı deneyimi için formu sarsabilir veya e-postayı odağa alabiliriz
                document.getElementById('login-email').focus();
            }
        });
    </script>
    <script>
            // Sayfa yüklendiğinde tarayıcıya bu sayfanın geçmişte "ileri" gitmiş olduğunu söyle
            // Böylece geri tuşuna basıldığında sayfa zorla yenilenir ve C# tarafındaki kontrol çalışır
            if (window.history.replaceState) {
                window.history.replaceState(null, null, window.location.href);
            }
        }
    </script>
    <partial name="_ValidationScriptsPartial" />
}
