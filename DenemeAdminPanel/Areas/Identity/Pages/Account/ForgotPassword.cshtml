@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Şifre Yenileme";
    // İşlem başarılı mı kontrolü
    var isSuccess = TempData["SuccessReset"] != null || (ViewData.ModelState.IsValid && HttpContext.Request.Method == "POST");
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0 p-4" style="border-radius: 20px;">

                @if (isSuccess)
                {
                    @* E-posta başarıyla gönderildikten sonra görünecek ekran *@
                    <div class="text-center py-4">
                        <div class="mb-4">
                            <i class="bi bi-envelope-check-fill" style="font-size: 4rem; color: #28a745;"></i>
                        </div>
                        <h2 class="fw-bold mb-3">Bağlantı Gönderildi</h2>
                        <p class="text-muted mb-4 lead">
                            Şifre sıfırlama bağlantısı kurumsal e-posta adresinize gönderilmiştir. Lütfen gelen kutunuzu kontrol edin.
                        </p>
                        <a asp-page="./Login" class="btn btn-dark btn-lg w-100" style="border-radius: 12px;">
                            Giriş Ekranına Dön
                        </a>
                    </div>
                }
                else
                {
                    @* E-posta giriş formu *@
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-shield-lock-fill" style="font-size: 3.5rem; color: var(--ibb-pink);"></i>
                        </div>
                        <h2 class="fw-bold" style="color: var(--ibb-dark-bg);">Şifre Yenileme</h2>
                        <p class="text-muted px-3">Güvenliğiniz için kayıtlı e-posta adresinize bir doğrulama bağlantısı göndereceğiz.</p>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="form-floating mb-4">
                            <input asp-for="Input.Email" class="form-control shadow-sm" style="border-radius: 12px; border: 1px solid #dee2e6;" placeholder="eposta@ibb.istanbul" />
                            <label asp-for="Input.Email">Kurumsal E-posta Adresiniz</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <button type="submit" class="w-100 btn btn-lg text-white py-3 shadow" style="background-color: var(--ibb-pink); border-radius: 15px; font-weight: 600; border: none;">
                            Doğrulama Bağlantısı Gönder
                        </button>

                        <div class="mt-4 text-center">
                            <a asp-page="./Login" class="text-decoration-none fw-bold" style="color: var(--ibb-pink);">
                                <i class="bi bi-arrow-left me-1"></i> Giriş Ekranına Dön
                            </a>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}