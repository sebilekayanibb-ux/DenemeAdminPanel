<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İBB İstanbul Senin Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --ibb-pink: #E5007D;
            --ibb-dark-bg: #1A1C1E;
            --ibb-light-bg: #F8F9FA;
            --ibb-text-gray: #ADB5BD;
            --sidebar-width: 260px;
        }

        body {
            background-color: var(--ibb-light-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Sidebar Kapsayıcısı */
        .sidebar {
            width: var(--sidebar-width);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh; /* Ekran yüksekliğine sabitle */
            background-color: var(--ibb-dark-bg);
            z-index: 1030;
            display: flex;
            flex-direction: column; /* İçindekileri dikey diz */
            transition: all 0.3s;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-brand {
            padding: 30px 20px;
            text-align: center;
            border-bottom: 1px solid #2D2F31;
            flex-shrink: 0; /* Küçülmesini engelle */
        }

            .sidebar-brand h4 {
                color: white;
                font-weight: 700;
                letter-spacing: 1px;
                margin: 0;
            }

        /* Menü Listesi */
        .sidebar-nav {
            flex-grow: 1; /* Boş alanı doldur */
            display: flex;
            flex-direction: column;
            overflow-y: auto; /* Çok link olursa içeride kaydır */
            padding: 10px 0;
        }

            .sidebar-nav a {
                color: var(--ibb-text-gray);
                padding: 12px 25px;
                display: flex;
                align-items: center;
                text-decoration: none;
                transition: all 0.3s;
                border-left: 4px solid transparent;
                font-size: 0.95rem;
            }

                .sidebar-nav a:hover, .sidebar-nav a.active {
                    color: white;
                    background-color: #2D2F31;
                    border-left: 4px solid var(--ibb-pink);
                }

            .sidebar-nav i {
                width: 30px;
                font-size: 1.1rem;
            }

            .sidebar-nav .text-danger {
                color: #dc3545 !important;
            }

                .sidebar-nav .text-danger:hover {
                    background-color: rgba(220, 53, 69, 0.1) !important;
                }

        /* Ana İçerik */
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 40px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        @@media (max-width: 991.98px) {
            .sidebar {
                margin-left: calc(-1 * var(--sidebar-width));
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <div class="sidebar shadow">
        <div class="sidebar-brand">
            <h4>İBB ADMIN</h4>
            <small class="text-secondary">İstanbul Senin</small>
        </div>

        <div class="sidebar-nav">
            <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="fa fa-home"></i> Dashboard
            </a>

            @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
            {
                <a asp-controller="Announcement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Announcement" ? "active" : "")">
                    <i class="fa fa-bullhorn"></i> Duyuru Yönetimi
                </a>
                <a href="#"><i class="fa fa-th-large"></i> Uygulama Vitrini</a>
            }

            @if (User.IsInRole("Admin") || User.IsInRole("Finance"))
            {
                <a href="#"><i class="fa fa-wallet"></i> Kampanya Bütçeleri</a>
                <a href="#"><i class="fa fa-chart-line"></i> Finans Raporları</a>
            }

            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="UserManagement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "UserManagement" ? "active" : "")">
                    <i class="fa fa-user-shield"></i> Personel Yetkileri
                </a>
            }

            <div class="mt-auto pb-3">
                <hr class="mx-3 text-secondary" />
                <a href="#"><i class="fa fa-cog"></i> Ayarlar</a>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                    <a href="javascript:void(0)" onclick="document.getElementById('logoutForm').submit()" class="text-danger fw-bold">
                        <i class="fa fa-sign-out-alt"></i> Güvenli Çıkış
                    </a>
                </form>
            </div>
        </div>
    </div>

    <div class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>