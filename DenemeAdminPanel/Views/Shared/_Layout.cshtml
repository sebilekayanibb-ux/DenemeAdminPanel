<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - İBB İstanbul Senin Admin</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --ibb-pink: #E5007D; /* İstanbul Senin Ana Rengi */
            --ibb-dark-bg: #1A1C1E; /* Yan Menü Arka Planı */
            --ibb-light-bg: #F8F9FA; /* Sayfa Arka Planı */
            --ibb-text-gray: #ADB5BD;
            --sidebar-width: 260px; /* Yan Menü Genişliği */
        }

        body {
            background-color: var(--ibb-light-bg);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
        }

        /* Yan Menü (Sidebar) Sabit ve Üstte */
        .sidebar {
            width: var(--sidebar-width);
            position: fixed;
            top: 0;
            left: 0;
            height: 100vh;
            background-color: var(--ibb-dark-bg);
            z-index: 1030;
            transition: all 0.3s;
            box-shadow: 4px 0 10px rgba(0,0,0,0.1);
        }

        .sidebar-brand {
            padding: 30px 20px;
            text-align: center;
            border-bottom: 1px solid #2D2F31;
        }

            .sidebar-brand h4 {
                color: white;
                font-weight: 700;
                letter-spacing: 1px;
                margin: 0;
            }

        .sidebar-nav {
            padding: 20px 0;
        }

            .sidebar-nav a {
                color: var(--ibb-text-gray);
                padding: 15px 25px;
                display: flex;
                align-items: center;
                text-decoration: none;
                transition: all 0.3s;
                border-left: 4px solid transparent;
            }

                .sidebar-nav a:hover, .sidebar-nav a.active {
                    color: white;
                    background-color: #2D2F31;
                    border-left: 4px solid var(--ibb-pink);
                }

            .sidebar-nav i {
                width: 30px;
                font-size: 1.1rem;
            }

        /* ANA İÇERİK ALANI: Menünün üzerine binmesini önleyen kısım */
        .main-content {
            margin-left: var(--sidebar-width); /* Menü genişliği kadar sağa itiyoruz */
            padding: 40px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        /* Razor Hatasını Önleyen Medya Sorgusu (Çift @@ Kullanımı) */
        @@media (max-width: 991.98px) {
            .sidebar {
                margin-left: calc(-1 * var(--sidebar-width)); /* Mobilde gizle */
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }

        /* Kart ve Buton Tasarımları */
        .btn-ibb {
            background-color: var(--ibb-pink);
            color: white;
            border-radius: 8px;
            padding: 8px 20px;
        }

            .btn-ibb:hover {
                background-color: #c4006b;
                color: white;
            }
    </style>
</head>
<body>

    <div class="sidebar shadow">
        <div class="sidebar-brand">
            <h4>İBB ADMIN</h4>
            <small class="text-secondary">İstanbul Senin</small>
        </div>
        <div class="sidebar-nav">
            <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="fa fa-home"></i> Dashboard
            </a>
            <a asp-controller="Announcement" asp-action="Index" class="@(ViewContext.RouteData.Values["Controller"]?.ToString() == "Announcement" ? "active" : "")">
                <i class="fa fa-bullhorn"></i> Duyuru Yönetimi
            </a>
            <a href="#"><i class="fa fa-th-large"></i> Uygulama Vitrini</a>
            <a href="#"><i class="fa fa-users"></i> Kullanıcılar</a>
            <hr class="mx-3 text-secondary" />
            <a href="#"><i class="fa fa-cog"></i> Ayarlar</a>
        </div>
    </div>

    <div class="main-content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>