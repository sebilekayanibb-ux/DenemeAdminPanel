@model List<DenemeAdminPanel.Entities.UserLog>

<div class="container mt-4">
    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-dark text-white p-3" style="border-radius: 15px 15px 0 0;">
            <h5 class="mb-0"><i class="fa fa-history me-2"></i> Sistem İşlem Logları</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Tarih</th>
                        <th>İşlem Yapılan Kullanıcı</th>
                        <th>Açıklama</th>
                        <th>IP Adresi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td class="ps-4">@log.Date.ToString("dd.MM.yyyy HH:mm")</td>
                            <td class="fw-bold">@log.Email</td>
                            <td>@log.Action</td>
                            <td><span class="badge bg-secondary">@log.IpAddress</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>