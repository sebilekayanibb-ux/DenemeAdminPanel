@model IEnumerable<DenemeAdminPanel.Entities.Announcement>

<div class="card shadow-sm border-0 p-4" style="border-radius: 15px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="fw-bold"><i class="fa fa-bullhorn me-2" style="color: #E5007D;"></i> Duyuru Listesi</h3>
        <a asp-action="Create" class="btn text-white px-4 rounded-pill" style="background-color: #E5007D;">
            <i class="fa fa-plus me-1"></i> Yeni Duyuru Ekle
        </a>
    </div>

    <table class="table table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Sıra</th>
                <th>Başlık</th>
                <th>Oluşturma</th>
                <th>Durum</th>
                <th class="text-end">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><span class="badge bg-light text-dark border">@item.DisplayOrder</span></td>
                    <td><strong>@item.Title</strong></td>
                    <td>@item.CreatedDate.ToShortDateString()</td>
                    <td>
                        @if (item.IsActive)
                        {
                            <span class="badge bg-success px-3 rounded-pill">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger px-3 rounded-pill">Pasif</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning"><i class="fa fa-edit"></i></a>
                        <button type="button" onclick="confirmDelete(@item.Id)" class="btn btn-sm btn-outline-danger"><i class="fa fa-trash"></i></button>
                        <form id="delete-form-@item.Id" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:none;">
                            @Html.AntiForgeryToken()
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function confirmDelete(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu duyuru silinecek!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#E5007D',
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'Vazgeç'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('delete-form-' + id).submit();
                }
            });
        }
    </script>
}