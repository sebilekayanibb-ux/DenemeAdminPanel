@model DenemeAdminPanel.Entities.Announcement

<div class="container py-4">
    <div class="card border-0 shadow-lg p-4" style="border-radius: 20px;">
        <h4 class="mb-4 fw-bold text-dark"><i class="fa fa-edit me-2" style="color: #E5007D;"></i>Duyuruyu Düzenle</h4>

        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />

            <div class="row">
                <div class="col-md-8">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Başlık</label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger small fw-bold"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label fw-bold">İçerik Metni</label>
                        <textarea asp-for="Content" class="form-control" rows="15"></textarea>
                        <span asp-validation-for="Content" class="text-danger small fw-bold"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card p-3 bg-light border-0 shadow-sm" style="border-radius:15px;">
                        <div class="text-center mb-3">
                            <label class="fw-bold small d-block mb-1 text-muted">Mevcut Görsel</label>
                            <img src="@Model.ImageUrl" class="rounded border shadow-sm w-100" style="height:120px; object-fit:cover;" onerror="this.src='/images/no-image.jpg';">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-primary small">Görseli Güncelle</label>
                            <div class="border rounded p-2 bg-white text-center">
                                <input type="file" asp-for="ImageFile" class="form-control form-control-sm mb-2" />
                                <span class="badge bg-secondary mb-2">VEYA</span>
                                <div class="row g-2">
                                    <div class="col-4">
                                        <input type="radio" asp-for="SelectedPresetImage" value="/images/ibb-1.jpg" id="e1" class="btn-check">
                                        <label class="btn btn-outline-info p-1 w-100" for="e1"><img src="/images/announcements/ibb-1.jpg" class="w-100 rounded" style="height:35px; object-fit:cover;"></label>
                                    </div>
                                    <div class="col-4">
                                        <input type="radio" asp-for="SelectedPresetImage" value="/images/ibb-2.jpg" id="e2" class="btn-check">
                                        <label class="btn btn-outline-info p-1 w-100" for="e2"><img src="/images/announcements/ibb-2.jpg" class="w-100 rounded" style="height:35px; object-fit:cover;"></label>
                                    </div>
                                    <div class="col-4">
                                        <input type="radio" asp-for="SelectedPresetImage" value="/images/ibb-3.jpg" id="e3" class="btn-check">
                                        <label class="btn btn-outline-info p-1 w-100" for="e3"><img src="/images/announcements/ibb-3.jpg" class="w-100 rounded" style="height:35px; object-fit:cover;"></label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Görüntüleme Sırası</label>
                            <input asp-for="DisplayOrder" class="form-control" type="number" />
                            <span asp-validation-for="DisplayOrder" class="text-danger small fw-bold"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-primary small">Yayın Tarihleri</label>
                            <input asp-for="StartDate" type="date" class="form-control mb-1" />
                            <span asp-validation-for="StartDate" class="text-danger small fw-bold d-block"></span>

                            <input asp-for="EndDate" type="date" class="form-control mt-2" />
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label class="form-check-label fw-bold">Aktif mi?</label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn text-white fw-bold py-2 shadow-sm" style="background-color: #E5007D; border-radius: 12px;">Değişiklikleri Kaydet</button>
                            <a asp-action="Index" class="btn btn-outline-secondary fw-bold shadow-sm py-2" style="border-radius: 12px; background-color:white;">Vazgeç</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>