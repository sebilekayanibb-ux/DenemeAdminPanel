@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .glass-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        border: none;
        transition: transform 0.3s ease;
    }

        .glass-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 15px;
    }

    .gradient-header {
        background: linear-gradient(135deg, #E5007D 0%, #ff1a95 100%);
        border-radius: 20px;
        color: white;
    }
</style>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="gradient-header p-5 shadow-lg d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-2">İstanbul Senin Admin Paneli</h1>
                    <p class="lead opacity-75 mb-0">@ViewBag.Message</p>
                    <span class="badge bg-white text-dark mt-3 px-3 py-2 rounded-pill">
                        <i class="fa fa-user-circle me-1"></i> @User.Identity?.Name
                    </span>
                </div>
                <div class="d-none d-md-block">
                    <i class="fa fa-chart-line fa-5x opacity-25"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <div class="card glass-card shadow-sm p-4 h-100">
                <div class="stat-icon bg-light text-primary" style="background-color: #ffeef6 !important;">
                    <i class="fa fa-bullhorn fa-2x" style="color: #E5007D;"></i>
                </div>
                <h6 class="text-muted fw-bold">TOPLAM DUYURU</h6>
                <h2 class="display-4 fw-bold">@ViewBag.TotalAnnouncements</h2>
                <div class="progress mt-2" style="height: 6px;">
                    <div class="progress-bar" style="width: 100%; background-color: #E5007D;"></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glass-card shadow-sm p-4 h-100">
                <div class="stat-icon bg-light text-success" style="background-color: #e8fadf !important;">
                    <i class="fa fa-check-circle fa-2x"></i>
                </div>
                <h6 class="text-muted fw-bold text-success">AKTİF YAYINLAR</h6>
                <h2 class="display-4 fw-bold text-success">@ViewBag.ActiveAnnouncements</h2>
                <div class="progress mt-2" style="height: 6px;">
                    <div class="progress-bar bg-success" style="width: 75%;"></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card glass-card shadow-sm p-4 h-100">
                <div class="stat-icon bg-light text-info" style="background-color: #e3f2fd !important;">
                    <i class="fa fa-th-large fa-2x text-primary"></i>
                </div>
                <h6 class="text-muted fw-bold text-primary">MİNİ UYGULAMALAR</h6>
                <h2 class="display-4 fw-bold text-primary">@ViewBag.MiniAppCount</h2>
                <div class="progress mt-2" style="height: 6px;">
                    <div class="progress-bar bg-primary" style="width: 100%;"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-6">
                <div class="card bg-dark text-white border-0 shadow-lg p-4 h-100" style="border-radius: 20px;">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-shield-alt fa-2x me-3 text-warning"></i>
                        <h4 class="mb-0">Sistem Yönetimi</h4>
                    </div>
                    <p class="text-secondary">Tüm kullanıcı rollerini ve ana uygulama ayarlarını bu panelden kontrol edebilirsiniz.</p>
                    <div class="mt-auto">
                        <button class="btn btn-warning rounded-pill px-4">Ayarları Aç</button>
                    </div>
                </div>
            </div>
        }

        @if (User.IsInRole("Analyst") || User.IsInRole("Admin"))
        {
            <div class="col-md-6">
                <div class="card border-0 shadow-lg p-4 h-100" style="border-radius: 20px;">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fa fa-chart-pie fa-2x me-3" style="color: #E5007D;"></i>
                        <h4 class="mb-0">Veri Analizi</h4>
                    </div>
                    <p class="text-muted">Kullanıcı tıklanma oranlarını ve uygulama kullanım istatistiklerini raporlayın.</p>
                    <div class="mt-auto">
                        <button class="btn text-white rounded-pill px-4" style="background-color: #E5007D;">Raporları Görüntüle</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>