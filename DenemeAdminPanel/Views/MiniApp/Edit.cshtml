@model DenemeAdminPanel.Entities.MiniApp

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg" style="border-radius: 20px;">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-4 text-dark"><i class="bi bi-pencil-square me-2"></i> Uygulama Düzenle</h4>

                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label class="form-label small fw-bold">Uygulama Adı</label>
                            <input asp-for="Name" class="form-control shadow-sm" style="border-radius: 10px;" required>
                        </div>
                        <div class="col-md-4">
                            @* ELLE SIRA NUMARASI GİRME ALANI *@
                            <label class="form-label small fw-bold">Görüntüleme Sırası</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control shadow-sm" style="border-radius: 10px;" min="1">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">Link (AppUrl)</label>
                        <input asp-for="AppUrl" class="form-control shadow-sm" style="border-radius: 10px;" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">İzin İsteme Açıklama Metni</label>
                        <textarea asp-for="PermissionText" class="form-control shadow-sm" rows="3" style="border-radius: 10px;"></textarea>
                    </div>

                    <div class="row align-items-center mb-4">
                        <div class="col-auto">
                            <img src="@Model.IconUrl" class="rounded border p-1" style="width: 60px; height: 60px; object-fit: cover;">
                        </div>
                        <div class="col">
                            <label class="form-label small fw-bold">İkonu Değiştir</label>
                            <input type="file" name="IconFile" class="form-control shadow-sm" style="border-radius: 10px;" accept="image/*">
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-4 border">
                        <label class="fw-bold m-0 text-dark">Uygulama Durumu</label>
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" style="width: 45px; height: 22px;">
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn text-white px-5 py-2" style="background-color: var(--ibb-pink); border-radius: 10px; flex: 2;">
                            Değişiklikleri Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 10px; flex: 1;">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            var message = '@TempData["SuccessMessage"]';
            if (message) {
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    text: message, // Artık "başarıyla" düzgün yazılıyor
                    showConfirmButton: false,
                    timer: 2000,
                    iconColor: '#E5007D'
                });
            }
        });
    </script>
}