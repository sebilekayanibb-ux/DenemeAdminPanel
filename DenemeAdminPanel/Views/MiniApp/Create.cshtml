@model DenemeAdminPanel.Entities.MiniApp

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg" style="border-radius: 20px;">
            <div class="card-body p-4">
                <h4 class="fw-bold mb-4 text-dark"><i class="bi bi-app-indicator me-2"></i>Yeni Uygulama Tanımla</h4>

                <form asp-action="Create" method="post" enctype="multipart/form-data" id="createForm">
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <label class="form-label small fw-bold">Uygulama Adı</label>
                            <input asp-for="Name" class="form-control shadow-sm" style="border-radius: 10px;" required>
                        </div>
                        <div class="col-md-4">
                            @* MANUEL SIRA GİRİŞ ALANI *@
                            <label class="form-label small fw-bold">Görüntüleme Sırası</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control shadow-sm" style="border-radius: 10px;" min="1" value="1">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">Link (AppUrl)</label>
                        <input asp-for="AppUrl" class="form-control shadow-sm" style="border-radius: 10px;" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label small fw-bold">İzin İsteme Açıklama Metni</label>
                        <textarea asp-for="PermissionText" class="form-control shadow-sm" rows="4" style="border-radius: 10px;" placeholder="Bu uygulamaya geçiş yapmanız durumunda..."></textarea>
                    </div>

                    <div class="mb-4">
                        <label class="form-label small fw-bold">Uygulama İkonu</label>
                        <input type="file" name="IconFile" class="form-control shadow-sm" style="border-radius: 10px;" required>
                    </div>

                    <div class="d-flex justify-content-between align-items-center bg-light p-3 rounded-3 mb-4 border">
                        <label class="fw-bold m-0 text-dark">Hemen Yayına Al</label>
                        <div class="form-check form-switch">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" checked style="width: 45px; height: 22px;">
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn text-white px-5 py-2 shadow" style="background-color: var(--ibb-pink); border-radius: 10px; flex: 2; font-weight: 600;">
                            Uygulamayı Kaydet
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2" style="border-radius: 10px; flex: 1;">Vazgeç</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Karakter bozulmasını önlemek için Raw kullanıyoruz
            var message = '@Html.Raw(TempData["SuccessMessage"])';
            if (message) {
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı!',
                    text: message,
                    showConfirmButton: false,
                    timer: 2000,
                    iconColor: '#E5007D'
                });
            }
        });
    </script>
}